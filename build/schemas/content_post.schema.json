{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://smilecms.dev/schema/content-post.json",
  "title": "SmileCMS Content Document",
  "type": "object",
  "required": ["meta", "body", "source_path"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["slug", "title", "status"],
      "properties": {
        "slug": {
          "type": "string",
          "minLength": 1,
          "pattern": "^[a-z0-9][-a-z0-9_/]*[a-z0-9]$"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "summary": {
          "type": ["string", "null"]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "status": {
          "type": "string",
          "enum": ["draft", "published", "archived"]
        },
        "content_type": {
          "type": "string",
          "enum": ["article", "gallery", "audio", "video", "other"]
        },
        "hero_media": {
          "oneOf": [
            { "$ref": "#/$defs/media" },
            { "type": "null" }
          ]
        },
        "canonical_url": {
          "type": ["string", "null"],
          "format": "uri"
        },
        "published_at": {
          "type": ["string", "null"],
          "format": "date-time"
        },
        "updated_at": {
          "type": ["string", "null"],
          "format": "date-time"
        },
        "duration": {
          "type": ["number", "null"],
          "minimum": 0
        },
        "download_enabled": {
          "type": ["boolean", "null"]
        },
        "download_path": {
          "type": ["string", "null"]
        }
      },
      "additionalProperties": false
    },
    "body": {
      "type": "string"
    },
    "source_path": {
      "type": "string"
    },
    "assets": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/media"
      }
    },
    "lyrics": {
      "type": ["string", "null"]
    }
  },
  "$defs": {
    "media": {
      "type": "object",
      "required": ["path"],
      "properties": {
        "path": {
          "type": "string"
        },
        "alt_text": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "mime_type": {
          "type": "string"
        },
        "width": {
          "type": "integer",
          "minimum": 0
        },
        "height": {
          "type": "integer",
          "minimum": 0
        },
        "duration": {
          "type": "number",
          "minimum": 0
        },
        "variants": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/variant"
          }
        }
      },
      "additionalProperties": false
    },
    "variant": {
      "type": "object",
      "required": ["profile", "path"],
      "properties": {
        "profile": {
          "type": "string",
          "minLength": 1
        },
        "path": {
          "type": "string"
        },
        "width": {
          "type": "integer",
          "minimum": 1
        },
        "height": {
          "type": "integer",
          "minimum": 1
        },
        "format": {
          "type": "string"
        },
        "quality": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
